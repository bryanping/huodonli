/* pages/meeting/meeting.wxss */
.overlay {
  background-color: white;
  width: 100%;
  height: 100vh;
}

.selected_date {
  text-align: center;
}

.selected_date--text {
  margin:0 30rpx;
}

.selected_date>view {
  display: inline-block;
}
.select_icon {
  width: 50rpx;
  height: 50rpx;
  position:relative;
  top:11rpx;
}

.wrapper {
  padding: 0 30rpx;
}

.meeting__date {
  font-size:25rpx;
  padding:10rpx 0;
  margin-top:8px;
  color: #333;
}

.meeting__container {
  margin: 15rpx 0;
  display: flex;
}
.meeting__hr {
  display: block;
  width: 100%;
  height: 0px;
  border-bottom: 1px solid gainsboro;
}

.meeting__add image {
   width: 75rpx;
   height: 75rpx;
}
.meeting__departure--container {
  display: flex;
}
.meeting__departure {
  flex: 1 0;
  margin-left: 50px;
  text-align: center;
  color: #717175;
}


.meeting__time {
  padding:10rpx 15rpx 0 0;
  flex:1;
  color:#c7c7cc;
  font-size:16px;
}

.meeting__content {
  flex: 7;
  text-align: center;
  font-weight: bold;
  font-size:16px;
  padding: 10rpx;
  border-radius: 7px;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  color: white;
}

.spinner {
  padding-top: 200rpx;
  display: block;
  margin: 0 auto;
  max-width: 100%;
  width: 200rpx;
  height: 200rpx;
}