/* pages/meeting/meeting.wxss */
@import "../../libs/weui-wxss.wxss";

.overlay {
  background-color: white;
  width: 100%;
  height: 100vh;
}

.selected_date {
  text-align: center;
}

.selected_date--text {
  margin:0 30rpx;
}

.selected_date>view {
  display: inline-block;
}
.select_icon {
  width: 50rpx;
  height: 50rpx;
  position:relative;
  top:11rpx;
}

.wrapper {
  padding: 0 30rpx 30rpx 30rpx;
}

.meeting__date {
  font-size:25rpx;
  padding:10rpx 0;
  margin-top:8px;
  color: #353535;
}

.meeting__container {
  margin: 15rpx 0;
  display: flex;
}
.meeting__hr {
  display: block;
  width: 100%;
  height: 0px;
  border-bottom: 1px solid gainsboro;
}

.meeting__add image {
   width: 75rpx;
   height: 75rpx;
}
.meeting__departure--container {
  display: flex;
}
.meeting__departure {
  flex: 1 0;
  margin-left: 50px;
  text-align: center;
  color: grey;
}






