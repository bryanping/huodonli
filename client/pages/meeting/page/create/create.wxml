<view class='container'>
  <form bindsubmit="formSubmit" report-submit='true'>
    <view class='wrapper'>
      <view class="section">
        <view class="section--text">资讯</view>
        <textarea auto-height bindlinechange="bindlinechange" placeholder=" 请输入行程资讯 | 可支持多行输入" placeholder-style="color: #d3d3d4" class="section--elem input" name="title" bindinput="bindKeyInput" value="{{title}}" />
      </view>

      <view class="section">
        <view class="section--text">开始时间</view>
        <picker mode="time" class="start" value="{{start_time}}" bindchange="bindTime">
          <view class="picker">{{start_time}}</view>
        </picker>
        <view class='section--text'>｜ 结束时间</view>
        <picker mode="time" class="end" value="{{end_time}}" bindchange="bindEndTime">
          <view class="picker">{{end_time}}</view>
        </picker>
        <!-- <switch bindchange="switch1Change"/> -->
        <view class="howlong">({{how_long}}) </view>
      </view>

      <view class="section">
        <view class="section--text">日期</view>
        <picker mode="date" class="date" value="{{date}}" bindchange="bindDateStart">
          <view class="picker">{{date}}</view>
        </picker>
      </view>

      <view class="section border">
        <view class="section--text">地点</view>
        <input class="section--elem input1" placeholder="请输入目的地" placeholder-style="color: #d3d3d4" value="{{destination}}" bindtouchstart="bindMapSelection" />
      </view>
      

      <view class="section">
        <switch class='switch' bindchange="switch1Change" />
        <view class="limit--text">公开活动</view>
        <view class='limit--text'>｜ 人数</view>
        <switch class='switch' bindchange="switch1Change" />
        <view class='limit--text'>不限制</view>
      </view>

      <view class="section">
        <view class="section--text">举办方</view>
        <view class="limit--text">"個人或群"</view>
      </view>

      <view class="section">
        <view class="section--text">类别：</view>
        <view class="limit--text">"選擇器"</view>
      </view>

      <!-- <view class="section">
        <view class='section--text'>费用</view>
