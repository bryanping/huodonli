<view class='container'>
  <form bindsubmit="formSubmit" report-submit='true'>
    <view class='wrapper'>
      <view class="section">
        <view class="section--text">资讯</view>
        <textarea bindlinechange="bindlinechange" placeholder=" 请输入活动内容 | 可支持多行输入" placeholder-style="color: #d3d3d4" class="section--elem input" name="title" bindinput="bindKeyInput" value="{{title}}" />
      </view>

      <view class="section">
        <view class="section--text">日期</view>
        <picker mode="date" class="section--elem" value="{{date}}" bindchange="bindDateStart">
          <view class="picker">{{date}}({{weekArr[value]}})</view>
        </picker>
      </view>

      <view class="section">
        <view class="section--text">时间</view>
        <picker mode="time" class="start" value="{{start_time}}" bindchange="bindTime">
          <view class="picker">开始 {{start_time}} ｜</view>
        </picker>
        <picker mode="time" class="end" value="{{end_time}}" bindchange="bindEndTime">
          <view class="picker">结束 {{end_time}}</view>
        </picker>
        <view class="howlong">({{how_long}}) </view>
      </view>

      <view class="section">
        <view class="section--text">地点</view>
        <input class="section--elem input1" placeholder="请输入目的地"  placeholder-style="color: #d3d3d4"  value="{{destination}}" bindtouchstart="bindMapSelection"/>
      
      </view>
