      <view style='{{mapObj ? "display:block" : "display:none"}}' class="section--elem map_container">
        <map class="map" id="map" catchtap='mapEvent' longitude="{{mapObj.longitude}}" latitude="{{mapObj.latitude}}" scale="16" show-location="true" markers="{{mapObj.markers}}" bindmarkertap="makertap"></map>
