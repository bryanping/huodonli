<!--pages/meeting/page/create/create.wxml-->
<view class='container'>
  <form bindsubmit="formSubmit"  report-submit='true'>
    <view class='wrapper'>
    <view class="section">
      <view class="section--text">活动资讯：</view>
      <textarea  bindlinechange="bindlinechange" placeholder="请输入活动内容 | 可支持多行输入" placeholder-style="color: #d3d3d4" class="section--elem input" name="title" bindinput="bindKeyInput" value="{{title}}" />
    </view>
    
    <view class="section">
      <view class="section--text">活动日期：</view>
      <picker mode="date" class="section--elem" value="{{date}}" bindchange="bindDateStart">
        <view class="picker">{{date}}</view>
      </picker>
    </view>

     <view class="section">
      <view class="section--text">开始时间：</view>
      <picker mode="time" class="section--elem2" value="{{start_time}}" bindchange="bindTime">
        <view class="picker">{{start_time}}  －</view>
      </picker>
      <picker mode="time" class="section--elem3" value="{{end_time}}" bindchange="bindEndTime">
        <view class="picker">{{end_time}}</view>
      </picker>
      </view>

    <view class="section">
      <view class="section--text">活动时长</view>
      <view class="section--elem1" value="{{how_long}}" bindchange="bindHowLong">
      <view class="picker">{{how_long}} (自动计算)</view>
      </view>
      </view>

    <view class="section">
      <view class="section--text">活动地点</view>
      <input class="section--elem input1" placeholder="请输入目的地" placeholder-style="color: #d3d3d4" name="title" value="{{destination}}" bindinput="bindDestinationInput" bindtouchstart="bindMapSelection" />
    </view>
          <view class="search--box">
        <view bindtouchstart="bindSearch" data-id="{{i.id}}" data-keywords="{{i.name}}" class="text_box" wx:for="{{tips}}" wx:key="{{i.id}}" wx:for-item="i">
      {{i.name}}
      </view>
    </view>

    <view style='{{mapObj ? "display:block" : "display:none"}}' class="section--elem map_container">
        <map class="map" id="map" catchtap='mapEvent' longitude="{{mapObj.longitude}}" latitude="{{mapObj.latitude}}" scale="14" show-location="true" markers="{{mapObj.markers}}" bindmarkertap="makertap"></map>
    </view>

