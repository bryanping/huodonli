@import "../../../../libs/weui-wxss.wxss";

page {
  color: #333;
  background-color: white;
  font-family: "黑体";
  font-size: 16px;
}

.container {
  height: 85%;
  position: relative;
  padding:5px 0 0;
}

switch {
  zoom: 0.6;
  padding:29rpx 15rpx;
}





.picker {
  color: #e64340;
}


.colorpoint {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
}

.colorpointselected {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  box-shadow: 0rpx 0rpx 20rpx #353535;
}



.border {
  border-bottom: 1rpx solid #D9D9D9;
}





.section--elem {
    flex: 1 0;
    text-align:center;
    padding:15rpx 10rpx;
  }
  
.limit--text {
