.wrapper {
  min-height: 100vh;
  margin-bottom: -50px;
  padding-bottom: 50px;
  box-sizing: border-box;
}

.submit {
  display: block;
  height: 50px;
  width: 100%;
  padding: 0;
  font-size: 20px;
  color: white;
  border: 0;
  border-radius: 0;
  background: -webkit-linear-gradient(left, #02f 0%, #0079ff 100%);
  padding-top: 0px;
}

.map_container {
  padding: 0px !important;
}

.map {
  width: 100%;
  height: 35vh;
}

.search--box {
  text-align: center;
  background-color: white;
  font-size: 15px;
}

.text_box {
  color: #d3d3d3;
  padding: 5rpx;
}

