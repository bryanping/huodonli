/* pages/meeting/page/create/create.wxss */

page {
  background-color: #ffffff;
  font-family: "黑体";
}

.container {
  height: auto;
  position: relative;
}

form {
  width: 100%;
}
.weui-uploader__title {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.weui-uploader__info {
  color: #B2B2B2;
}
.weui-uploader__bd {
  margin-bottom: -4px;
  margin-right: -9px;
  overflow: hidden;
}
.weui-uploader__file {
  float: left;
  margin-right: 9px;
  margin-bottom: 9px;
}
.weui-uploader__img {
  display: block;
  width: 79px;
  height: 79px;
}
.weui-uploader__file_status {
  position: relative;
}
.weui-uploader__file_status:before {
  content: " ";
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
}
.weui-uploader__file-content {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  color: #FFFFFF;
}
.weui-uploader__input-box {
  float: left;
  position: relative;
  margin-right: 9px;
  margin-bottom: 9px;
  width: 77px;
  height: 77px;
  border: 1px solid #D9D9D9;
}
.weui-uploader__input-box:before,
.weui-uploader__input-box:after {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  background-color: #D9D9D9;
}
.weui-uploader__input-box:before {
  width: 2px;
  height: 39.5px;
}
.weui-uploader__input-box:after {
  width: 39.5px;
  height: 2px;
}
.weui-uploader__input-box:active {
  border-color: #999999;
}
.weui-uploader__input-box:active:before,
.weui-uploader__input-box:active:after {
  background-color: #999999;
}
.weui-uploader__input {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.input1 {
  width: 100%;
  text-align: center;
  font-size: 15px;
  min-height: 25rpx;
  height: 40rpx;
  color: #5e5e5e;
  padding: 0;
}

.input {
  width: 100%;
  font-size: 15px;
  color: #5e5e5e;
  line-height: 20px;
  height: 150rpx;
}

.picker {
  width: 100%;
  text-align: center;
  font-size: 15px;
  color: #333;
  letter-spacing: 2px;
}

.howlong {
  text-align: right;
  font-size: 13px;
  color: #8e8e93;
  padding: 6px;
}

.colorpoint {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
}

.colorpointselected {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  -webkit-box-shadow: 0rpx 0rpx 20rpx #333;
}

.section {
  display: flex;
  background-color: white;
  padding: 6rpx;
  border-bottom: 1px solid #d3d3d3;
}

.section:first-child {
  border-bottom: 1rpx solid #d3d3d3;
}

.section--text {
  color:  #333;
  font-size: 15px;
  padding: 10rpx 5rpx;
}

.section--elem {
  flex: 1 0;
  padding:7px 5px;
}

.start {
  padding: 10rpx 0 0 0;
  margin-left: 10%;
}

.end {
  flex: 1 0;
  padding: 10rpx 0rpx;
  margin-left: -8%;
}
