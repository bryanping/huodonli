/* pages/meeting/page/create/create.wxss */
@import "../../../../libs/weui-wxss.wxss";

page {
  color: #333;
  background-color: white;
  font-family: "黑体";
  font-size: 35rpx;
}

.container {
  height: 85%;
  position: relative;
  padding:0 0 15%;
}

switch {
  zoom: 0.6;
  padding:29rpx 15rpx;
}

form {
  width: 100%;
}

.address{
  flex: 2 0;
  font-size: 12px;
  color: rgb(150, 150, 150);
}

.input {
  text-align: left!important;
  display: block;
  margin: 0 auto 0 auto;
  /* height: 150rpx; */
  padding: 5rpx 0 3vh!important;
}

.picker {
  color: #e64340;
}

.howlong {
  text-align: right;
  font-size: 12px;
  color: #888888;
  padding:20rpx 10rpx;
}

.colorpoint {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
}

.colorpointselected {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  box-shadow: 0rpx 0rpx 20rpx #353535;
}

.section {
  display: flex;
  padding: 8rpx;
  border-bottom: 15rpx solid #eeeeee;
}

.border {
  border-bottom: 15rpx solid #eeeeee;
}

.section:first-child {
  border-bottom: 15rpx solid #eeeeee;
}

.section--text {
  padding:15rpx 10rpx;
}

.limit--text {
  padding:15rpx 10rpx;
}

.section--elem {
  flex: 1 0;
  text-align:right;
  padding:15rpx 10rpx;
}

.destination {
  padding: 0 30rpx 0;
  text-overflow:ellipsis;
}

.address{
  padding:0 30rpx 0;
}

.start {
  padding:15rpx;
  text-align:right;
  width:17%;
}

.end {
  padding:15rpx;
  text-align:right;
  width:72%;
}

.date {
  padding:15rpx 0 0 0;
  color:#e64340;
  text-align:right;
  width:55%;
}

/* 
.color-picker {
  text-align: center;
  margin-top: 3px;
} */

.wrapper {
  min-height: 92vh;
  box-sizing: border-box;
}

.submit {
  width: 90%;
  font-size: 35rpx;
  color: white;
  border-radius: 8pt;
  background: -webkit-linear-gradient(left, #02f 0%, #0079ff 100%);
  position: fixed;
  height: 80rpx;
  margin-right: 20rpx;
  left: 30rpx;
  top: 1190rpx;

}

.map_container {
  padding: 0px !important;
}

.map {
  width: 100%;
  height: 20vh;
}



