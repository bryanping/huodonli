/* pages/meeting/page/create/create.wxss */

page {
  background-color: #fbfbfb;
  font-family: "黑体";
}

.container {
  height: auto;
  position: relative;
}

form {
  width: 100%;
}

.input {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  min-height: 25rpx;
  height: 40rpx;
  color:#8e8e93;
}


.picker {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color:#8e8e93;
}

.colorpoint {
  width:50rpx;
  height:50rpx;
  border-radius:50rpx;
}

.colorpointselected {
  width:50rpx;
  height:50rpx;
  border-radius:50rpx;
  -webkit-box-shadow:0rpx 0rpx 20rpx #333;
}

.section {
  display:flex;
  background-color: white;
  padding: 6rpx;
  border-bottom: 1px solid #E6E6E5;
}
.section:first-child {
  border-bottom: 2rpx solid #E6E6E5;
}

.section--text {
  color:#8e8e93;
  font-size: 28rpx;
  padding: 10rpx 5rpx;
}

.section--text1 {
  color:#8e8e93;
  font-size: 28rpx;
  padding: 10rpx 5rpx;
  margin-top:5px;
}

.section--elem{
  flex:1 0;
  padding: 10rpx 30rpx;
}

.section--elem1{
  flex:1 0;
  padding: 10rpx 30rpx;
  margin-left:-65px;
}

.color-picker {
  text-align: center;
  margin-top:3px;
}

.wrapper {
  min-height: 100vh;
  margin-bottom:-50px;
  padding-bottom: 50px;
  box-sizing: border-box;
}

.submit {
  display: block;
  height:50px;
  width:100%;
  padding:0;
  font-size: 20px;
  color: white;
  border: 0;
  border-radius: 0;
  background: -webkit-linear-gradient(left, #0022ff 0%,#0079ff 100%);
  padding-top:0px;
}

.map_container {
  padding: 0px!important;
}

.map {
  width:100%;
  height:48vh;
}

.search--box {
  text-align:center;
  background-color:white;
  font-size:25rpx;
}

.text_box {
  color:#8e8e93;
  padding:5rpx;
}