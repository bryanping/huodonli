/* pages/meeting/page/create/create.wxss */
@import "../../../../libs/weui-wxss.wxss";

page {
  color: #333;
  background-color: white;
  font-family: "黑体";
  font-size: 16px;
}

.container {
  height: 85%;
  position: relative;
  padding:5px 0 15%;
}

switch {
  zoom: 0.6;
  padding:29rpx 15rpx;
}

form {
  width: 100%;
}

.address{
  flex: 2 0;
  font-size: 12px;
  color: rgb(150, 150, 150);
}


.picker {
  color: #e64340;
}


.colorpoint {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
}

.colorpointselected {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  box-shadow: 0rpx 0rpx 20rpx #353535;
}



.border {
  border-bottom: 1rpx solid #D9D9D9;
}

.section:first-child {
  border-bottom: 1rpx solid #D9D9D9;
}



.section--elem {
    flex: 1 0;
    text-align:center;
    padding:15rpx 10rpx;
  }
  
.limit--text {
  padding:15rpx 10rpx;
}


.address{
  padding:0 30rpx 0;
}




/* 
.color-picker {
  text-align: center;
  margin-top: 3px;
} */

.wrapper {
  min-height: 90vh;
  box-sizing: border-box;
}

.submit {
  width: 90%;
  color: white;
  border-radius: 8pt;
  background: -webkit-linear-gradient(left, #02f 0%, #0079ff 100%);
  position: fixed;
  height: 80rpx;
  margin-right: 20rpx;
  left: 30rpx;
  top: 1190rpx;

}

.map_container {
  padding: 0px !important;
}
.date {
    flex: 1;
    padding:12rpx 25rpx 0 0;
    color:#e64340;
    text-align:center;
  }
  
.start {
    flex: 1;
    padding: 12rpx 0 0 100rpx;
    text-align: right;
  }
  .end {
    padding:12rpx 0 0 15rpx;
    flex: 1;
    text-align:left;
  }
  .destination {
    padding:0 25rpx 0 0;
    text-overflow:ellipsis;
  }


