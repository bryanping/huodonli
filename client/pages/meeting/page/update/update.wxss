page {
  background-color: white;
  font-family: "黑体";
  color: #333;
  font-size:16px;
}

.container {
  height: 80%;
  position: relative;
  padding:0 0 25%;
}
form {
  width: 100%;
}

.picker {
  width: 100%;
  text-align: center;
  letter-spacing: 2px;
}

.colorpoint {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
}

.colorpointselected {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
}

.section {
  display: flex;
  padding: 5rpx;
  border-bottom: 12rpx solid #eeeeee;
}

.section:first-child {
  border-bottom: 12rpx solid #eeeeee;
}

.section--text {
  
  padding: 15rpx 10rpx
}

.section--elem {
  flex: 3 0;
  padding:15rpx 10rpx;
}


.destination{
  text-overflow:ellipsis;
}

.address{
  flex: 2 0;
  font-size: 12px;
  color: rgb(150, 150, 150);
}

.date{
  padding: 12rpx 10rpx;

}
.time{
  padding: 12rpx 0rpx;
  margin-left:5%;

}
.end_time{
  padding: 12rpx 0rpx;

}
.howlong {
  text-align: right;
  font-size: 12px;
  color: #8e8e93;
  padding: 8px;
}



