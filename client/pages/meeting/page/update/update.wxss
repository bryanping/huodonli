page {
  background-color: #fbfbfb;
  font-family: "黑体";
}

.container {
  height: auto;
  position: relative;
}

form {
  width: 100%;
}

.input {
  font-size: 28rpx;
  color:#8e8e93;
  line-height:20px;
}
.input1 {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  min-height: 25rpx;
  height: 40rpx;
  color:#8e8e93;
}


.picker {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color:#8e8e93;
  letter-spacing:2px;

}

.colorpoint {
  width:50rpx;
  height:50rpx;
  border-radius:50rpx;
}

.colorpointselected {
  width:50rpx;
  height:50rpx;
  border-radius:50rpx;
  -webkit-box-shadow:0rpx 0rpx 20rpx #333;
}

.section {
  display:flex;
  background-color: white;
  padding: 5rpx;
  border-bottom: 1px solid #E6E6E5;
}
.section1 {
  display:flex;
  background-color: white;
  padding: 5rpx;
  margin-bottom: 0rpx;
  border-bottom: 1px solid #E6E6E5;
}
.section:first-child {
  border-bottom: 2rpx solid #E6E6E5;
}

.section--text {
  color:#8e8e93;
  font-size: 28rpx;
  padding: 10rpx 5rpx;
  font-family: "黑体";
}
.section--elem1{
  flex:1 0;
  padding: 10rpx 0rpx;
  margin-left:-50%;
}
.section--elem2{
  flex:1 0;
  padding: 10rpx 0rpx;
  margin-left:2%;
}

.section--elem{
  flex:1 0;
  padding: 10rpx 30rpx;
}

.color-picker {
  text-align: center;
}


.wrapper {
  min-height: 100vh;
  margin-bottom:-7vh;
  padding-bottom: 0rpx;
  box-sizing: border-box;
}

.submit {
  display: block;
  height:100rpx;
  width:100%;
  padding:0;
  font-size: 36rpx;
  color: white;
  border: 0;
  border-radius: 0;
  background: -webkit-linear-gradient(left, #0022ff 0%,#0079ff 100%);
  margin-bottom:0rpx;
}

.map_container {
  padding: 0px!important;
}

.map {
  width:100%;
  height:28vh;
}

.search--box {
  text-align:center;
  background-color:white;
  font-size:28rpx;
}

.text_box {
  color:#8e8e93;
  padding:5rpx;
}

.control--button {
  width: 50%;
  flex: 1 1 0px;
  color: #8e8e93;
  font-size: 15px;
  padding-top:2px;
}

.showmanber {
  width: 100%;
  flex: 1 1 0px;
  color: #8e8e93;
  font-size: 15px;
  padding-top:2px;
}
.update {
 background: -webkit-linear-gradient(left, #ffffff 0%,#ffffff 100%);
}

.delete {
  background-color: rgb(255, 255, 255);
  
}

.overlay {
  background-color: white;
  width: 100%;
  height: 100vh;
}

.spinner {
  padding-top: 200rpx;
  display: block;
  margin: 0 auto;
  max-width: 100%;
  width: 200rpx;
  height: 200rpx;
}

.user {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  padding:10rpx;
  max-width:80rpx;
}

.user--image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: block;
  margin: 0 auto;
}

.user--name {
  text-align: center;
  font-size: 20rpx;
  color:#8e8e93;
  text-overflow: ellipsis;
}

.members {
  flex-wrap: wrap;
  justify-content:center;
  align-items:flex-start;
}

.section--title {
  color:#8e8e93;
  font-size: 28rpx;
  padding: 10rpx 5rpx;
  flex:1 0;
  text-align-last: center;
}