page {
  background-color: #ffffff;
  font-family: "黑体";
}

.container {
  height: 80%;
  position: relative;
  padding:0 0 20%;
}

form {
  width: 100%;
}

.input {
  width: 100%;
  font-size: 15px;
  min-height: initial;
  color: #333;
  line-height: 20px;
  height: 10vh;
}

.input1 {
  width: 100%;
  font-size: 15px;
  color: #333;
  line-height: 20px;
  height:40rpx;
}

.picker {
  width: 100%;
  text-align: center;
  font-size: 15px;
  color: #333;
  letter-spacing: 2px;
}

.colorpoint {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
}

.colorpointselected {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  -webkit-box-shadow: 0rpx 0rpx 20rpx #333;
}

.section {
  display: flex;
  background-color: white;
  padding: 0rpx 2rpx;
  border-bottom: 1px solid #d3d3d3;
}

.section:first-child {
  border-bottom: 2rpx solid #d3d3d3;
}

.section--text {
  color: #333;
  font-size: 15px;
  padding: 14rpx 5rpx
}

.section--elem1 {
  padding: 14rpx 10rpx;
  margin-right: 15%;
}

.section--elem2 {
  padding: 14rpx 0rpx;
  margin-left: -12%;
}

.section--elem3 {
  padding: 14rpx 0rpx;
  margin-right: 15%;
}

.section--elem {
  flex: 3 0;
  padding: 14rpx 10rpx;
}

