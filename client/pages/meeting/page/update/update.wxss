.map_container {
  padding: 0px !important;
}

.map {
  width: 100%;
  height: 23vh;
}

.search--box {
  text-align: center;
  background-color: white;
  font-size: 15px;
}

.text_box {
  color: #8e8e93;
  padding: 5rpx;
}

.control--button {
  width: 50%;
  flex: 1 1 0px;
  color: #8e8e93;
  font-size: 15px;
}

.showmanber {
  width: 100%;
  flex: 1 1 0px;
  color: #8e8e93;
  font-size: 15px;
  padding-top: 2px;
}

.update {
  background: -webkit-linear-gradient(left, #fff 0%, #fff 100%);
}

.delete {
  background-color: rgb(255, 255, 255);
}

.overlay {
  background-color: white;
  width: 100%;
  height: 100vh;
}

.spinner {
  display: block;
  margin: 0 auto;
  max-width: 100%;
  width: 200rpx;
  height: 200rpx;
}

.user {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  padding: 10rpx;
  max-width: 86rpx;
}

.user--image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: block;
  margin: 0 auto;
}

.user--name {
  text-align: center;
  font-size: 18rpx;
  color: #8e8e93;
  text-overflow: ellipsis;
}

.members {
  flex-wrap: wrap;
  justify-content: center;
  align-items: flex-start;
}

.section--title {
  color: #333;
  font-size: 15px;
  padding: 10rpx 10rpx;
  flex: 1 0;
  text-align-last: center;
}
.nav_icon {
  width: 30px;
  height: 30px;
  position:relative;
  top:2px;
  right:5px;
}

.share {
  height:100rpx;
  width:60%;
  font-size:40rpx;
  color:white;
  border-radius:100rpx;
  background:-webkit-linear-gradient(left, #02f 0%, #0079ff 100%);
  left:36%;
  bottom:50rpx;
  position:fixed;
}