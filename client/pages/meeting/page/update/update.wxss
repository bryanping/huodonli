.container {
    height: 80%;
    position: relative;
    padding: 0 0 25%;
  }
  
.overlay {
    background-color: white;
    width: 100%;
    height: 100vh;
  }

.wrapper {
    min-height: 90vh;
    box-sizing: border-box;
  }

  .section:first-child {
    border-bottom: 12rpx solid #eeeeee;
  }
  
  .section--text {
    padding: 15rpx 15rpx
  }

  .section--elem {
    padding:15rpx 15rpx;
  }

.picker {
  width: 100%;
  text-align: center;
  letter-spacing: 2px;
}

.colorpoint {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
}

.colorpointselected {
  width: 50rpx;
