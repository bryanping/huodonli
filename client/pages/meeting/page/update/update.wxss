/* 時間內容 */




.control--button {
  width: 50%;
  flex: 1 1 0px;
  color: #8e8e93;
  font-size:16px;
}

.showmanber {
  width: 100%;
  flex: 1 1 0px;
  color: #8e8e93;
  padding-top: 2px;
}

.update {
  background: -webkit-linear-gradient(left, #fff 0%, #fff 100%);
}

.delete {
  background-color: rgb(255, 255, 255);
}

.user {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  padding: 10rpx;
  max-width: 86rpx;
}

.user--image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: block;
  margin: 0 auto;
}

.user--name {
  text-align: center;
  font-size: 18rpx;
  color: #8e8e93;
  text-overflow: ellipsis;
}

.members {
  flex-wrap: wrap;
  justify-content: center;
  align-items: flex-start;
}

.section--title {
  color: #333;

  padding: 10rpx 10rpx;
  flex: 1 0;
  text-align-last: center;
}


.share {
    width: 90%;
    color: white;
    border-radius: 8pt;
    background: -webkit-linear-gradient(left, #02f 0%, #0079ff 100%);
    bottom: 50rpx;
    text-align: center;
    font-size: 16px;
}

