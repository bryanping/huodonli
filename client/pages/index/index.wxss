/**index.wxss**/

@import "../../libs/weui-wxss.wxss";

.title {
  width: 100%;
  text-align: center;
  font-size: 18px;
  font-weight: bold;
  position: fixed;
}

.wrapper {
  padding: 0 30rpx;
}

.year {
  margin-top: 15rpx;
  margin-bottom: -25rpx;
  font-size:45rpx;
  text-align: left;
  color: #333;
}

.eventnon {
  margin-bottom: 15rpx;
  font-size: 20px;
  text-align: center;
  color: #333;
}

.request__container {
  margin: 15rpx 0;
  display: flex;
}

.request__hr {
  display: block;
  width: 100%;
  height: 0px;
  border-bottom: 1px solid gainsboro;
}

.request__date {
  font-size:25rpx;
  padding:10rpx 0;
  margin-top:8px;
  color: #333;
}



.selected_date {
  text-align: center;
  padding-top: 20px;
}

.selected_date--text {
  margin: 5px 10px;
  margin-bottom: 0px;
  font-size: 18px;
}

.selected_date>view {
  display: inline-block;
}

.overlay {
  background-color: white;
  width: 100%;
  height: 100vh;
}



.devent {
  color: #aaa;
}

.scoll-h {
  height: 100%;
}


.swiper-tab {
  display: flex;
  flex-direction: row;
  line-height: 40rpx;
}

.color-1 {
  border-bottom: 3px solid #4cd964;
}

.color-2 {
  border-bottom: 3px solid #4098ff;
}

.color-3 {
  border-bottom: 3px solid #ffad40;
}

.tab-item {
  width: 25%;
  color: rgb(161, 161, 161);
  text-align: center;
  font-size:35rpx;
}

.one {
  color: rgb(75, 75, 75);
  border-bottom: 10rpx solid #4cd964;
}

.two {
  color: rgb(75, 75, 75);
  font-weight: bold;
  border-bottom: 10rpx solid #4098ff;
}

.three {
  color: rgb(75, 75, 75);
  font-weight: bold;
  border-bottom: 10rpx solid #ffad40;
}

.swiper {
  height: 95vh;
  width: 100%;
  color: white;
  padding-top: 56rpx;
}

.swiper-item {
  background: #008cff;
  text-align: center;
  height: 17vh;
  padding: 10vh 0 0;
}

.block {
  flex: 2 2;
  line-height: 10vh;
}
