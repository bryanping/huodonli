page {
  background-color: #fbfbfb;
  font-family: "黑体";
}

.container {
  height: auto;
  position: relative;
}

form {
  width: 100%;
}

.input {
  font-size: 15px;
  color: #333;
  line-height:20px;
}

.colorpoint {
  width:50rpx;
  height:50rpx;
  border-radius:50rpx;
}

.colorpointselected {
  width:50rpx;
  height:50rpx;
  border-radius:50rpx;
  -webkit-box-shadow:0rpx 0rpx 20rpx #333;
}

.section {
  display:flex;
  background-color: white;
  padding: 5rpx;
  border-bottom: 1rpx solid #E6E6E5;
}
.section:first-child {
  border-bottom: 2rpx solid #E6E6E5;
}

.section--text {
  color: #333;
  font-size: 15px;

  padding: 10rpx 5rpx;
}

.section--elem{
  flex:3 0;
  padding: 10rpx 10rpx;
  letter-spacing:2px;
}
.section--elem1{
  padding: 10rpx 10rpx;
  margin-right:15%;
}
.section--elem2{
  padding: 10rpx 0rpx;
  margin-left:-12%;
}

.wrapper {
  min-height: 87vh;
  box-sizing: border-box;
}

.submit {
  display: block;
  height: 14vh;
  width: 100%;
  padding: 10px;
  font-size: 42rpx;
  color: white;
  border: 0;
  border-radius: 0;
  background: -webkit-linear-gradient(left, #02f 0%, #0079ff 100%);
}

.map_container {
  padding: 0px!important;
}

.map {
  width:100%;
  height:40vh;
}

.search--box {
  text-align:center;
  background-color:white;
  font-size:15px;
}

.overlay {
  background-color: white;
  width: 100%;
  height: 100vh;
}

.spinner {
  padding-top: 200rpx;
  display: block;
  margin: 0 auto;
  max-width: 100%;
  width: 200rpx;
  height: 200rpx;
}

.user {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  padding:10rpx;
  max-width:80rpx;
}

.user--image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: block;
  margin: 0 auto;
}

.user--name {
  text-align: center;
  font-size: 18rpx;
  color: #333;
  text-overflow: ellipsis;
}

.members {
  flex-wrap: wrap;
  justify-content:center;
  align-items:flex-start;
}

.section--title {
  color: #333;
  font-size: 15px;

  padding: 10rpx 5rpx;
  flex:1 0;
  text-align-last: center;
}
.nav_icon {
  width: 30px;
  height: 30px;
  position:relative;
  top:2px;
  right:5px;
}