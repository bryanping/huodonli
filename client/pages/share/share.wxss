

@import "../../libs/weui-wxss.wxss";


page {
  color: #333;
  background-color: white;
  font-family: "黑体";
  font-size:16px;
}

.container {
  height: 80%;
  position: relative;
  padding: 0 0 25%;
}

button::after {
  border: none;
}
button {
  background-color: #fff;
}


.section:first-child {
    border-bottom: 1rpx solid #D9D9D9;
}

.detail {
  padding: 4rpx 10rpx;
  font-size: 20rpx;
  color: #8e8e93;
}

.wrapper {
  min-height: 87vh;
  box-sizing: border-box;
}

.section--elem {
  flex: 3 0;
  padding: 15rpx 10rpx;
}

.date {
  padding: 15rpx 0 0 10rpx;
}

.time {
  padding: 15rpx 0;
  margin-left: 5%;
}

.howlong {
  padding: 20rpx 0 0 20rpx;
}

.limit--text {
  padding: 15rpx 10rpx;
}

.organizer {
  width: 100%;
  bottom: 190rpx;
  position: fixed;
  background-color: white;
  border-top: 12rpx solid #eee;
  padding: 35rpx 0 8rpx 0;
}

.organizer--image {
  width: 120rpx;
  height: 120rpx;
  padding: 0 0 0 25rpx;
  position: fixed;
  bottom: 11vh;
  border-radius: 50%;
}

.organizer--name {
  padding: 0 0 0 20vw;
}

.follow {
  width: 85px;
  height: 45px;
  position: fixed;
  right: 3vw;
  bottom: 12vh;
}

.destination {
  text-overflow: ellipsis;
}

.address {
  flex: 2 0;
  font-size: 12px;
  color: rgb(150, 150, 150);
}

.button {
  right: 3%;
  bottom: 50rpx;
  color: white;
  height: 100rpx;
  position: fixed;
  font-size: 40rpx;
  border-radius: 100rpx;
  background: -webkit-linear-gradient(left, #02f 0%, #0079ff 100%);
}

.share {
  width: 79%;
}

.join {
  width: 94%;
}

.quit {
  height: 35px;
  width: 35px;
  position: fixed;
  bottom: 32px;
  left: 5%;
}

.map_container {
  padding: 0px !important;
}



.overlay {
  width: 100%;
  height: 100vh;
}



.user {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  padding: 10rpx;
  max-width: 80rpx;
}

.user--image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: block;
  margin: 0 auto;
}

.user--name {
  text-align: center;
  font-size: 18rpx;
  text-overflow: ellipsis;
}

.members {
  flex-wrap: wrap;
  justify-content: left;
  align-items: flex-start;
  border-bottom:none;
  display: flex;
}
.members--limit {
    font-size: 12px;
    color: rgb(150, 150, 150);
    display: flex;
    padding: 15rpx 0 0 15rpx;
    border-bottom: 1rpx solid #D9D9D9;
}

.showmenber {
  padding: 15rpx 10rpx;
  color: #0064ff;
}

.nav_icon {
  width: 35px;
  height: 35px;
  position: relative;
  padding: 22rpx 27rpx 0 10rpx;
}
